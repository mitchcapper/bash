srcdir = @srcdir@
VPATH = @srcdir@
topdir = @top_srcdir@
BUILD_DIR = @BUILD_DIR@
OBJEXT = @OBJEXT@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

CC = @CC@
RANLIB = @RANLIB@
AR = @AR@
ARFLAGS = @ARFLAGS@
RM = rm -f
CP = cp
MV = mv

SHELL = @MAKE_SHELL@

PROFILE_FLAGS = @PROFILE_FLAGS@

CFLAGS = @CFLAGS@ -DHAVE_UNISTD_H
LOCAL_CFLAGS = @LOCAL_CFLAGS@
STYLE_CFLAGS = @STYLE_CFLAGS@
CPPFLAGS = @CPPFLAGS@
LDFLAGS = @LDFLAGS@ @LOCAL_LDFLAGS@

DEFS = @DEFS@
LOCAL_DEFS = @LOCAL_DEFS@

BASHINCDIR = ${topdir}/include

INCLUDES = -I. -I../.. -I$(topdir) -I$(topdir)/gnu -I$(BASHINCDIR) -I$(topdir)/lib

CCFLAGS = $(PROFILE_FLAGS) $(DEFS) $(LOCAL_DEFS) ${INCLUDES} $(CPPFLAGS) \
	  $(STYLE_CFLAGS) $(LOCAL_CFLAGS) $(CFLAGS) ${ADDON_CFLAGS}

# Here is a rule for making .$(OBJEXT) files from .c files that doesn't force
# the type of the machine (like -sun3) into the flags.
%.obj: %.c
	${RM} $@
	$(CC) $(CCFLAGS) -c $<

# The name of the library target.
LIBRARY_NAME = libglob.a

# The C code source files for this library.
CSOURCES = $(srcdir)/glob.c $(srcdir)/strmatch.c $(srcdir)/smatch.c \
	   $(srcdir)/xmbsrtowcs.c

# The header files for this library.
HSOURCES = $(srcdir)/strmatch.h

OBJECTS = glob.$(OBJEXT) strmatch.$(OBJEXT) smatch.$(OBJEXT) xmbsrtowcs.$(OBJEXT) gmisc.$(OBJEXT)

# The texinfo files which document this library.
DOCSOURCE = doc/glob.texi
DOCOBJECT = doc/glob.dvi
DOCSUPPORT = doc/Makefile
DOCUMENTATION = $(DOCSOURCE) $(DOCOBJECT) $(DOCSUPPORT)

SUPPORT = Makefile ChangeLog $(DOCSUPPORT)

SOURCES  = $(CSOURCES) $(HSOURCES) $(DOCSOURCE)

THINGS_TO_TAR = $(SOURCES) $(SUPPORT)

######################################################################

all: $(LIBRARY_NAME)

$(LIBRARY_NAME): $(OBJECTS)
	$(RM) -f $@
	$(AR) $(ARFLAGS) $@ $(OBJECTS)
	-test -n "$(RANLIB)" && $(RANLIB) $@

what-tar:
	@for file in $(THINGS_TO_TAR); do \
	  echo $(selfdir)$$file; \
	done

documentation: force
	-(cd doc; $(MAKE) $(MFLAGS))
force:

# The rule for 'includes' is written funny so that the if statement
# always returns TRUE unless there really was an error installing the
# include files.
install:

clean:
	rm -f $(OBJECTS) $(LIBRARY_NAME)
	-(cd doc && $(MAKE) $(MFLAGS) $@ )

realclean distclean maintainer-clean: clean
	-( cd doc && $(MAKE) $(MFLAGS) $@ )
	$(RM) -f Makefile

mostlyclean: clean
	-( cd doc && $(MAKE) $(MFLAGS) $@ )

${BUILD_DIR}/pathnames.h: ${BUILD_DIR}/config.h ${BUILD_DIR}/Makefile Makefile
	-( cd ${BUILD_DIR} && ${MAKE} ${MFLAGS} pathnames.h )

######################################################################
#								     #
#  Dependencies for the object files which make up this library.     #
#								     #
######################################################################

smatch.$(OBJEXT): strmatch.h
smatch.$(OBJEXT): $(BUILD_DIR)/config.h
smatch.$(OBJEXT): $(BASHINCDIR)/chartypes.h
smatch.$(OBJEXT): $(BASHINCDIR)/ansi_stdlib.h $(topdir)/bashansi.h
smatch.$(OBJEXT): $(BASHINCDIR)/shmbutil.h
smatch.$(OBJEXT): $(topdir)/xmalloc.h

strmatch.$(OBJEXT): strmatch.h
strmatch.$(OBJEXT): $(BUILD_DIR)/config.h
strmatch.$(OBJEXT): $(BASHINCDIR)/stdc.h

glob.$(OBJEXT): $(BUILD_DIR)/config.h
glob.$(OBJEXT): $(topdir)/shell.h $(BUILD_DIR)/pathnames.h
glob.$(OBJEXT): $(topdir)/bashtypes.h $(BASHINCDIR)/ansi_stdlib.h $(topdir)/bashansi.h
glob.$(OBJEXT): $(BASHINCDIR)/posixstat.h $(BASHINCDIR)/memalloc.h
glob.$(OBJEXT): strmatch.h glob.h
glob.$(OBJEXT): $(BASHINCDIR)/shmbutil.h
glob.$(OBJEXT): $(topdir)/xmalloc.h

gmisc.$(OBJEXT): $(BUILD_DIR)/config.h
gmisc.$(OBJEXT): $(topdir)/bashtypes.h $(BASHINCDIR)/ansi_stdlib.h $(topdir)/bashansi.h
gmisc.$(OBJEXT): $(BASHINCDIR)/shmbutil.h

xmbsrtowcs.$(OBJEXT): ${BUILD_DIR}/config.h
xmbsrtowcs.$(OBJEXT): ${topdir}/bashansi.h ${BASHINCDIR}/ansi_stdlib.h
xmbsrtowcs.$(OBJEXT): ${BASHINCDIR}/shmbutil.h

# Rules for deficient makes, like SunOS and Solaris
glob.$(OBJEXT): glob.c
gmisc.$(OBJEXT): gmisc.c
strmatch.$(OBJEXT): strmatch.c
smatch.$(OBJEXT): smatch.c
xmbsrtowcs.$(OBJEXT): xmbsrtowcs.c

# dependencies for C files that include other C files
glob.$(OBJEXT): glob_loop.c
gmisc.$(OBJEXT): gm_loop.c
smatch.$(OBJEXT): sm_loop.c
